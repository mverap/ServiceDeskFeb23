                                    <br /><br /><text style="font-weight:bold;color:black;font-size:14px;">Nombre completo</text>
                                    <br /><text style="font-weight:inherit;color:#808080;font-size:12px;">@Html.DisplayFor(m => m.detalle.NombreCompleto)</text>
